# AI Generation Studio Configuration
# This file contains default settings for the application

[models]
# Default models to use
default_image_model = "runwayml/stable-diffusion-v1-5"
default_video_model = "guoyww/animatediff-motion-adapter-v1-5-2"
model_cache_dir = "./models_cache"
max_memory_usage = 0.8  # Use 80% of available GPU memory

[generation]
# Default generation parameters
default_steps = 20
default_guidance_scale = 7.5
default_width = 512
default_height = 512
default_video_frames = 16
default_video_fps = 8

[performance]
# Performance and optimization settings
use_xformers = true
use_tensorrt = false  # Enable if TensorRT is available
enable_cpu_offload = true
use_attention_slicing = true
enable_model_cpu_offload = false

[ui]
# User interface settings
theme = "dark"
show_advanced_options = false
auto_save_outputs = true
output_directory = "./outputs"

[cloud]
# Cloud provider settings (configure as needed)
enable_cloud_gpu = false
preferred_provider = "aws"  # aws, gcp, azure
max_cloud_cost_per_hour = 5.0

[logging]
# Logging configuration
log_level = "INFO"
log_file = "./logs/app.log"
enable_performance_metrics = true

[security]
# Security settings
allow_remote_access = false
require_api_key = false
max_requests_per_minute = 60