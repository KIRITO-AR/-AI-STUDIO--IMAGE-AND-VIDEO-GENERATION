[models]
default_image_model = stabilityai/stable-diffusion-xl-base-1.0
default_video_model = guoyww/animatediff-motion-adapter-v1-5-2
model_cache_dir = ./models_cache
max_memory_usage = 0.9

[generation]
default_steps = 30
default_guidance_scale = 7.5
default_width = 1024
default_height = 1024
default_video_frames = 24
default_video_fps = 12

[performance]
use_xformers = true
use_tensorrt = true
enable_cpu_offload = false
use_attention_slicing = false
enable_model_cpu_offload = false

[ui]
theme = dark
show_advanced_options = true
auto_save_outputs = true
output_directory = ./outputs

[cloud]
enable_cloud_gpu = true
preferred_provider = vultr
max_cloud_cost_per_hour = 10.0

[logging]
log_level = INFO
log_file = ./logs/app.log
enable_performance_metrics = true

[security]
allow_remote_access = true
require_api_key = false
max_requests_per_minute = 120